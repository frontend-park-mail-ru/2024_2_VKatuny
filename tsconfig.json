{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "baseUrl": "./",
    "jsx": "react",
    "jsxFactory": "vdom.createElement",
    "paths": {
      "@/*": ["src/*"],
      "@static/*": ["src/public/*"],
      "@api/*": ["src/modules/api/*"],
      "@common_utils/*": ["src/modules/common_utils/*"],
      "@application/*": ["src/application/*"]
    }
  }
}
