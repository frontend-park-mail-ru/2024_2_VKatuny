<form class="{{elementClass}} applicant-profile-form" id="applicant-profile-form" method="POST" novalidate>
    {{> validated-input formName="applicant-profile-form" elementName="first-name" inputName="firstName" inputCaption="Имя" inputType="text"}}
    {{> validated-input formName="applicant-profile-form" elementName="second-name" inputName="secondName" inputCaption="Фамилия" inputType="text"}}
    {{> validated-input formName="applicant-profile-form" elementName="city" inputName="city" inputCaption="Город" inputType="text"}}
    {{> validated-textarea formName="applicant-profile-form" elementName="education" inputName="education" inputCaption="Образование"}}
    {{> validated-input formName="applicant-profile-form" elementName="birthdate" inputName="birthDate" inputCaption="Дата Рождения" inputType="date"}}
    {{> validated-textarea formName="applicant-profile-form" elementName="contacts" inputName="contacts" inputCaption="Контакты"}}
</form>