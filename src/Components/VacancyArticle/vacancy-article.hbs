<article class="{{elementClass}} vacancy-article">
  <div class='vacancy-article__header-container'>
    <img class='vacancy-article__company-picture' src='{{avatar}}' />
    <div class='vacancy-article__header vacancy-summary'>
      <h1 class='vacancy-summary__header'></h1>
      <div class='vacancy-summary__company-name'></div>
      <div>
        <span class='vacancy-summary__salary'></span>
        <span class="vacancy-summary__work-type pill pill_main"></span>
      </div>
    </div>
    
  </div>
  <div class="vacancy-article__divider"></div>
  <div class='vacancy-article__description'></div>
</article>