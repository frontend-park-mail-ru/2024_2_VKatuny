<form id="login-form" action="{{url "register" ""}}" method="POST">
  <div class="block form-group user-type-group">
    <div class="user-type-column">
      <input type="radio" id="applicant" name="user_type" value="applicant"/>
      <label for="applicant" class="user-type-label text_roboto-regular">Соискатель</label>
    </div>
    <div class="user-type-column">
      <input type="radio" id="employer" name="user_type" value="employer"/>
      <label for="employer" class="user-type-label text_roboto-regular">Работодатель</label>
    </div>
  </div>

    <div class='block form-group'>
      <label for='email' class='text_roboto-regular'>Почта</label>
      <input  type='text' id='email' name='email'/>
    </div>

    <div class='block form-group'>
      <label for='password' class='text_roboto-regular'>Пароль</label>
      <input type='password' id='password' name='password''/>
    </div>

    <button type="submit" id="login-button" class="sub-button">
      <p class="text-registration text_roboto-bold">Войти</p>
    </button>
</form>
      
