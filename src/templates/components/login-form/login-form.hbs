<form id="login-form" action="{{url "login" ""}}" method="POST">
  <div class="block form-group user-type-group">
    <div class="user-type-column">
      <input type="radio" id="applicant" name="user-type" value="applicant" checked required/>
      <label for="applicant" class="user-type-label text_roboto-regular">Соискатель</label>
    </div>
    <div class="user-type-column">
      <input type="radio" id="employer" name="user-type" value="employer"/>
      <label for="employer" class="user-type-label text_roboto-regular">Работодатель</label>
    </div>
  </div>

    <div class='block form-group'>
      <label for='email' class='text_roboto-regular'>Почта</label>
      <input  type='text' id='email' name='email' maxlength="50"/>
    </div>

    <div class='block form-group'>
      <label for='password' class='text_roboto-regular'>Пароль</label>
      <input type='password' id='password' name='password' maxlength="40"/>
    </div>

    <button type="submit" id="login-button" class="sub-button button text_roboto-regular">
      Войти
    </button>
</form>
      
